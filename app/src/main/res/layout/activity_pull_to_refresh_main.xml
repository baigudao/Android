<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_my_pull_to_refresh_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.jackie.android.frame.pulltorefresh.PullToRefreshMainActivity">

    <include layout="@layout/title_bar"/>

    <Button
        android:id="@+id/btn_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="listview"
        android:textAllCaps="false"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="gridview"
        android:textAllCaps="false"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="webview"
        android:textAllCaps="false"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="scrollview"
        android:textAllCaps="false"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="参考资料"
        android:textAllCaps="false"
        android:textSize="18sp"/>

</LinearLayout>
